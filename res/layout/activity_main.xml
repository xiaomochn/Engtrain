<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tt.engtrain.MainActivity$PlaceholderFragment" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="说英语是专门为训练英语口语打造的一款移动应用，打破传统英语教学死记硬背的尴尬，让学生从说开始爱上英语，点击我快来体验吧" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher" />

    <com.yalantis.phoenix.PullToRefreshView
        android:id="@+id/pull_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.diegocarloslima.fgelv.lib.FloatingGroupExpandableListView
            android:id="@+id/sample_activity_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E6E2D9"
            android:cacheColorHint="@android:color/transparent"
            android:childDivider="#ffffffff"
            android:divider="#ffffffff"
            android:dividerHeight="1px"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" />
    </com.yalantis.phoenix.PullToRefreshView>

</RelativeLayout>